{
  // Accessibility settings
  "editor.accessibilitySupport": "on",
  "editor.wrappingStrategy": "advanced",
  "workbench.reduceMotion": "on",
  "explorer.compactFolders": false,

  // Use native window title bar and context menu for better accessibility
  "window.titleBarStyle": "native",
  "window.customTitleBarVisibility": "windowed",

  // Display git branch name in the title bar
  "window.title": "${activeRepositoryBranchName}${dirty}${activeEditorShort}${separator}${rootName}${separator}${profileName}${separator}${appName}",

  // Python related settings
  "python.showStartPage": false,
  "python.languageServer": "Pylance",
  "pylance.insidersChannel": "daily",
  "python.analysis.completeFunctionParens": true,
  "python.analysis.autoImportCompletions": true,
  // "python.linting.flake8Enabled": true,
  "python.formatting.provider": "none",
  "[python]": {
    "editor.formatOnType": true,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit"
    }
  },
  "isort.args": ["--profile", "black"],
  // "python.linting.flake8Args": ["--max-line-length=88"],
  "flake8.args": ["--max-line-length=88"],
  "python.formatting.blackArgs": ["--line-length", "88"],
  "black-formatter.args": ["--line-length", "88"],
  "python.REPL.sendToNativeREPL": false
}
